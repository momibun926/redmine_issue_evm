<% html_title("Project tracking with EVM") %>
<!-- contextual -->
<%= render partial: "/common/contextual", locals: { project: @project, cfg_param: @cfg_param } %>
<section>
  <h2><%= l(:title_evm_tab) %></h2>
  <h3><%= l(:subtitle_evm_exclude_issues) %></h3>
  <%= raw display_no_data(@exclude_issues) %>
  <% if @exclude_issues.present? %>
    <table class="list issue">
      <thead>
        <tr>
          <th>#</th>
          <th><%=l(:incomplete_issue_parent_id)%></th>
          <th><%=l(:field_project)%></th>
          <th><%=l(:field_subject)%></th>
          <th><%=l(:field_status)%></th>
          <th><%=l(:field_assigned_to)%></th>
          <th><%=l(:field_version)%></th>
          <th><%=l(:field_start_date)%></th>
          <th><%=l(:field_due_date)%></th>
          <th><%=l(:field_estimated_hours)%></th>
        </tr>
      </thead>
      <tbody>
        <% @exclude_issues.each do |issue| %>
          <tr id="issue-<%= issue.id %>" class="<%= cycle("odd", "even") %> <%= issue.css_classes %>"></tr>
            <td><%=link_to(issue.id, issue_path(issue))%></td>
            <td><%=issue.parent_id%></td>
            <td><%=issue.project%></td>
            <td><%=issue.subject%></td>
            <td><%=issue.status%></td>
            <td><%=issue.assigned_to%></td>
            <td><%=issue.fixed_version%></td>
            <td><%=format_date(issue.start_date)%></td>
            <td><%=format_date(issue.due_date)%></td>
            <td><%=issue.estimated_hours%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
  <%= link_to l(:button_back), :back, class: "icon icon-cancel" %>
</section>
