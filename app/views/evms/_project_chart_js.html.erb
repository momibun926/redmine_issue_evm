<canvas id="ChartProject" width="900" height="200"></canvas>
<script>
var ctx = document.getElementById("ChartProject").getContext("2d");
var myChart = new Chart(ctx, {
    type: "bar",
    data: {
        labels: <%= chart_data[:labels] %>,
        datasets: [{
            label: "PV",
            type: "line",
            spanGaps: true,
            data: <%= chart_data[:pv_actual] %>,
            borderWidth: 2,
            lineTension: 0,
            borderColor: "royalblue",
            pointRadius: 1,
            backgroundColor: "royalblue",
            fill: false
        },{
            label: "EV",
            type: "line",
            spanGaps: true,
            data: <%= chart_data[:ev] %>,
            borderWidth: 2,
            lineTension: 0,
            borderColor: "forestgreen",
            pointRadius: 1,
            backgroundColor: "forestgreen",
            fill: false
        },{
            label: "AC",
            type: "line",
            spanGaps: true,
            data: <%= chart_data[:ac] %>,
            borderWidth: 2,
            lineTension: 0,
            borderColor: "darkorange",
            pointRadius: 1,
            backgroundColor: "darkorange",
            fill: false
        },{
            label: "Baseline",
            type: "line",
            spanGaps: true,
            data: <%= chart_data[:pv_baseline] %>,
            borderWidth: 2,
            lineTension: 0,
            borderColor: "Navy",
            pointRadius: 0,
            backgroundColor: "Navy",
            fill: false
        },{
            label: "BAC",
            type: "line",
            spanGaps: true,
            data: <%= chart_data[:bac] %>,
            borderDash: [5, 2],
            borderWidth: 1,
            lineTension: 0,
            borderColor: "dodgerblue",
            pointRadius: 0,
            backgroundColor: "rgba(0, 0, 0, 0)",
            fill: false
        },{
            label: "Daily EAC",
            type: "line",
            spanGaps: true,
            data: <%= chart_data[:eac_daily] %>,
            borderDash: [2, 2],
            borderWidth: 1,
            lineTension: 0,
            borderColor: "gold",
            pointRadius: 0,
            backgroundColor: "rgba(0, 0, 0, 0)",
            fill: false
        },{
            label: "EAC",
            type: "line",
            spanGaps: true,
            data: <%= chart_data[:eac] %>,
            borderDash: [5, 2],
            borderWidth: 1,
            lineTension: 0,
            borderColor: "Orange",
            pointRadius: 0,
            backgroundColor: "rgba(0, 0, 0, 0)",
            fill: false
        },{
            label: "AC Forecast",
            type: "line",
            spanGaps: true,
            data: <%= chart_data[:ac_forecast] %>,
            borderDash: [2, 2],
            borderWidth: 2,
            lineTension: 0,
            borderColor: "Orange",
            pointRadius: 0,
            backgroundColor: "rgba(0, 0, 0, 0)",
            fill: false
        },{
            label: "EV Forecast",
            type: "line",
            spanGaps: true,
            data: <%= chart_data[:ev_forecast] %>,
            borderDash: [2, 2],
            borderWidth: 2,
            lineTension: 0,
            borderColor: "limegreen",
            pointRadius: 0,
            backgroundColor: "rgba(0, 0, 0, 0)",
            fill: false
        },{
            label: "PV Daily",
            data: <%= chart_data[:pv_daily] %>,
            steppedLine: "true",
            borderWidth: 1,
            borderColor: "lightskyblue",
            pointRadius: 0,
            backgroundColor: "lightskyblue"
        }]
    },
    options: {
        scales: {
            xAxes: [{
                type: "time",
                time: {
                    unit: "day",
                    displayFormats: {
                        day: "MMM D"
                    }
                },
                distribution: "linear",
                ticks: {
                    source: "auto"
                },
                stacked: false,
                gridLines: {
                    display: false
                }
            }],
            yAxes: [{
                gridLines: {
                    drawBorder: false
                },
                ticks: {
                    min: 0,
                }
            }]
        },
        legend: {
            display: true,
            position: "bottom"
        },
        tooltips: {
            mode: "nearest",
            intersect: false,
            callbacks: {
                title: function (tooltipItem, data){
                    var title = tooltipItem[0].xLabel;
                    return title.replace(", 12:00:00 am","");
                }
            }
        },
        annotation: {
            annotations: [
            {
                type: "line",
                mode: "vertical",
                scaleID: "x-axis-0",
                value: <%= basis_date %>,
                borderWidth: 1,
                borderColor: "darkred",
                label: {
                    content: "<%= basis_date_label %>",
                    enabled: true,
                    position: "top"
                }
            }]
        }
    }
});
</script>