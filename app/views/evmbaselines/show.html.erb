<h2><%= l(:label_baseline_show) %></h2>
<%= form_for @evm_baselines, url: {action: :show, method: :get} do |f| %>
  <div class="box tabular">
    <p>
      <%= f.label :subject %>
      <%= @evm_baselines.subject %>
    </p>
    <p>
      <%= label :bac ,l(:label_baseline_bac) %>
      <%= @evm_baselines.bac %>
    </p>
    <p>
      <%= label :start_date ,l(:label_baseline_start_date) %>
      <%= @evm_baselines.minimum_start_date %>
    </p>
    <p>
      <%= label :due_date ,l(:label_baseline_due_date) %>
      <%= @evm_baselines.maximum_due_date %>
    </p>
    <p>
      <%= f.label :description %>
      <span>
        <%= f.text_area :description, rows: 10, readonly: "ture" %>
      </span>
    </p>
  </div>
  <%= submit_tag l(:button_close) %>
<% end %>
